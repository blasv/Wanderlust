<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/picture_poi"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:contentDescription="Picture of POI"
        android:src="@drawable/diner" />

    <TextView
        android:id="@+id/poi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="POI Name"
        android:textColor="#171717"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Info Text"
        android:textSize="25sp"
        android:layout_marginTop="25sp"
        android:textColor="#171717" />

    <TextView
        android:id="@+id/text_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description and details"
        android:textSize="25sp"
        android:layout_marginTop="25sp"
        android:textColor="#171717" />

</LinearLayout>